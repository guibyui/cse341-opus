<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let book of prods) { %>
                            <section class="card">
                                <acticle class="book">
                                    <div class="back" style="background: linear-gradient(90deg, black 0%, black 2%, <%= book.backgroundColor %> 3%, <%= book.backgroundColor %> 5%, black 7%, <%= book.backgroundColor %> 13%, <%= book.backgroundColor %> 100%);"></div>
                                    <div class="page6"></div>
                                    <div class="page5"></div>
                                    <div class="page4"></div>
                                    <div class="page4-info">
                                        <h1>Description:</h1>
                                        <p>
                                            <%= book.description %>
                                        </p>
                                    </div>
                                    <div class="page3"></div>
                                    <div class="page3-info">
                                        <h1>Genre:</h1>
                                        <p>
                                            <%= book.genre %>
                                        </p>
                                        <h1>Page Count:</h1>
                                        <p>
                                            <%= book.pageCount %>
                                        </p>
                                        <h1>In Stock</h1>
                                        <p> <% if (book.inStock != 0) { %>
                                                <%= book.inStock %>
                                            <% } else { %>
                                                Sorry all books are checked out!
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="page2"></div>
                                    <div class="page1"></div>
                                    <div class="front" style="background: linear-gradient(90deg, black 0%, black 2%, <%= book.backgroundColor %> 3%, <%= book.backgroundColor %> 5%, black 7%, <%= book.backgroundColor %> 13%, <%= book.backgroundColor %> 100%);"> 
                                        <h1 class="book__title">
                                            <%= book.title %>
                                        </h1>
                                        <h2 class="book__author">
                                            <%= book.author %>
                                        </h2>
                                    </div>
                                </acticle>
                                <div class="actions">
                                    <a href="/admin/edit-book/<%= book._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-book" method="POST">
                                        <input type="hidden" value="<%= book._id %>" name="bookId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>
                                </div>
                                <div>
                                    
                                </div>
                            </section>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Books Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>