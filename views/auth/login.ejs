<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="signup">
            <p><small>Don't have an account?</small></p>
            <a class='btn' href="/signup">Make one Today!</a>
        </div>
        <div class="login">
            <form class="login-form" action="/login" method="POST">
                <div class="form-control">
                    <label for="email">E-Mail</label>
                    <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" type="email"
                        name="email" id="email" value="<%= oldInput.email %>">
                </div>
                <div class="form-control">
                    <label for="password">Password</label>
                    <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                        type="password" name="password" id="password" value="<%= oldInput.password %>">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button id="login-btn" class="btn" type="submit">Login</button>
            </form>
            <div class="newPassword">
                <p><small>Forgot your Password?</small></p>
                <a class='btn' href="/reset">Reset Password</a>
            </div>
        </div>

    </main>
    <%- include('../includes/end.ejs') %>