<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="grid">
                <h1 class="book__title">
                    <%= book.title %>
                </h1>
                <h2 class="book__author">
                    By <%= book.author %>
                </h2>
                <p>
                    <%= book.description %>
                </p>
                <h2>Genre:</h2>  
                <p>
                    <%= book.genre %>
                </p>
                <h2>Page Count:</h2>
                <p>
                    <%= book.pageCount %>
                </p>           
                <div class="actions">
                    <% if (isAuthenticated) { %>
                        <%- include('../includes/add-to-tote.ejs', {book: book}) %>
                    <% } %>
                </div>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>