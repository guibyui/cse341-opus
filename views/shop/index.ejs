<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
       <h1 id="welcome">Welcome to the Opus Library</h1>
       <div>
           <br/>
           <hr/>
           <br/>
           <h2 style="text-align: center;">Featured Books</h2>
           <div class="grid">
            <% for (let book of prods) { %>
                <section class="card">
                    <acticle class="book">
                        <div class="back" style="background: linear-gradient(90deg, black 0%, black 2%, <%= book.backgroundColor %> 3%, <%= book.backgroundColor %> 5%, black 7%, <%= book.backgroundColor %> 13%, <%= book.backgroundColor %> 100%);"></div>
                        <div class="page6"></div>
                        <div class="page5"></div>
                        <div class="page4"></div>
                        <div class="page4-info">
                            <h1>Description:</h1>
                            <p>
                                <%= book.description %>
                            </p>
                        </div>
                        <div class="page3"></div>
                        <div class="page3-info">
                            <h1>Genre:</h1>
                            <p>
                                <%= book.genre %>
                            </p>
                            <h1>Page Count:</h1>
                            <p>
                                <%= book.pageCount %>
                            </p>
                        </div>
                        <div class="page2"></div>
                        <div class="page1"></div>
                        <div class="front" style="background: linear-gradient(90deg, black 0%, black 2%, <%= book.backgroundColor %> 3%, <%= book.backgroundColor %> 5%, black 7%, <%= book.backgroundColor %> 13%, <%= book.backgroundColor %> 100%);"> 
                            <h1 class="book__title">
                                <%= book.title %>
                            </h1>
                            <h2 class="book__author">
                                <%= book.author %>
                            </h2>
                        </div>
                    </acticle>
                    <div class="actions">
                        <a href="/books/<%= book._id %>" class="btn">Details</a>
                        <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-tote.ejs', {book: book}) %>
                        <% } %>
                    </div>
                </section>
                <% } %>
            </div>
       </div>       
    </main>
<%- include('../includes/end.ejs') %>